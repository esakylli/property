{
  "compilerOptions": {
    // These options has documented reasons for deviating from defaults
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    // Paths options
    "baseUrl": ".",
    "paths": {
      "*": [
        "./custom_typings/*"
      ]
    },
    // Output options
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    // Module resolution (this will default to classic when you specify es2015 as module system)
    "moduleResolution": "node",
    // Lib options
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es2015.iterable",
      "es2015.symbol"
    ]
  }
}