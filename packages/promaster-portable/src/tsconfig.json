{
  "compilerOptions": {
    // Standard options
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    // Output options
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "../lib",
    "sourceMap": true,
    "lib": ["es5", "dom", "es2015", "es2015.promise", "es2015.iterable", "es2015.symbol"]
  },
  "exclude": [
    "node_modules"
  ]
}
