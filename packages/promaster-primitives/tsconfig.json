// This file is just for running the tests since they need to
// compile both the test folder and the src folder.
// The actual tsconfig.json is located under src
{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "../test_js_out",
    "noEmit": true,
    "sourceMap": true,
    "lib": ["es5"],
    "types": ["mocha", "node"],
    "typeRoots": ["./node_modules/@types"],
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
