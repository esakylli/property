// This file is just for running the tests since they need to
// compile both the test folder and the src folder.
// The actual tsconfig.json is located under src
{
  "extends": "../base-tsconfig.json",
  "compilerOptions": {
    // Output options
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "../test_js_out",
    "noEmit": true,
    "sourceMap": true,
    // Lib options
    "lib": ["es5", "es2015"],
    "types": ["mocha", "node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
