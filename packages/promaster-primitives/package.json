{
  "name": "@promaster/promaster-primitives",
  "version": "2.0.0",
  "main": "lib-cjs/index.js",
  "module": "lib-esm/index.js",
  "types": "lib-cjs/index",
  "description": "Promster SDK Primitives",
  "author": "Divid AB",
  "repository": "https://gitlab.divid.se/promaster-sdk/promaster-primitives",
  "license": "UNLICENSED",
  "publishConfig": {
    "registry": "https://npm.divid.se"
  },
  "devDependencies": {
    "@types/assertion-error": "^1.0.30",
    "@types/benchmark": "^1.0.31",
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.45",
    "@types/pegjs": "0.0.28",
    "benchmark": "^2.1.4",
    "chai": "^3.5.0",
    "husky": "^0.14.3",
    "jsdoc-to-markdown": "^2.0.1",
    "lint-staged": "^6.1.0",
    "madge": "^3.0.1",
    "mkdirp": "^0.5.1",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "pegjs": "0.9.0",
    "prettier": "^1.10.2",
    "rimraf": "^2.5.4",
    "shelljs": "^0.7.8",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-immutable": "^4.5.1",
    "typedoc": "^0.5.1",
    "typedoc-markdown-theme": "0.0.4",
    "typescript": "2.6.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": "tslint",
    "*.{ts,tsx,json,css}": ["prettier --write", "git add"]
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint": "tslint -t msbuild './{src,test}/**/*.ts{,x}'",
    "circular": "madge --circular ./src/index.ts",
    "benchmark":
      "node ./yarn.js build:cjs && node ./yarn.js build:benchmarks &&  node benchmarks/lib/property-filter.js",
    "build":
      "node yarn.js build:clean && node yarn.js build:cjs && node yarn.js build:esm",
    "build:clean": "rm -rf ./lib-cjs ./lib-esm",
    "build:cjs": "tsc -p src && node yarn.js build:parser:cjs",
    "build:esm":
      "tsc -p src --module es2015 --outDir ./lib-esm && node yarn.js build:parser:esm",
    "build:parser:cjs":
      "mkdirp lib-cjs/property/property-filter-ast/pegjs/ && cp src/property/property-filter-ast/pegjs/generated-parser.* lib-cjs/property/property-filter-ast/pegjs/",
    "build:parser:esm":
      "mkdirp lib-esm/property/property-filter-ast/pegjs/ && cp src/property/property-filter-ast/pegjs/generated-parser.* lib-esm/property/property-filter-ast/pegjs/",
    "build:parser:test":
      "mkdirp test/lib/src/property/property-filter-ast/pegjs/ && cp src/property/property-filter-ast/pegjs/generated-parser.* test/lib/src/property/property-filter-ast/pegjs/",
    "build:benchmarks": "cd benchmarks && tsc",
    "publish:major": "node scripts/publish.js major",
    "publish:minor": "node scripts/publish.js minor",
    "publish:patch": "node scripts/publish.js patch",
    "build:test": "tsc -p test && yarn build:parser:test",
    "gen-doc": "node yarn.js build && node scripts/gen-doc.js",
    "gen-typedoc":
      "typedoc --hideGenerator --theme node_modules/typedoc-markdown-theme/bin --out ./doc/typedoc ./src",
    "test": "mocha",
    "verify": "yarn build && yarn lint && yarn circular && yarn coverage",
    "coverage": "rm -rf coverage .nyc_output && nyc yarn test",
    "testjs": "yarn build:test && mocha \"test/lib/**/*.js\"",
    "generate-parser":
      "pegjs ./src/property/property-filter-ast/pegjs/parser.pegjs ./src/property/property-filter-ast/pegjs/generated-parser.js"
  }
}
