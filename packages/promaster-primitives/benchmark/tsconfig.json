{
  "extends": "../../../tsconfig-base.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "declaration": false,
    "sourceMap": true,
    "jsx": "react",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "client-lib/*": ["lib/*"],
      "shared-lib/*": ["../shared/lib/*"]
    },
    "lib": ["dom", "es2015", "es2017.object"],
    // If we do not specify this we get clashes in global types
    "types": ["node", "mocha"]
  }
}
